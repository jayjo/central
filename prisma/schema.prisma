// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Account {
  id                String  @id @default(cuid())
  userId            String
  type              String
  provider          String
  providerAccountId String
  refresh_token     String? @db.Text
  access_token      String? @db.Text
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String? @db.Text
  session_state     String?

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
}

model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique
  userId       String
  expires      DateTime
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model User {
  id             String            @id @default(cuid())
  email          String            @unique
  emailVerified  DateTime?
  name           String?
  zipCode        String?
  image          String?
  createdAt      DateTime          @default(now())
  orgId           String            @default("default-org")
  org            Org               @relation(fields: [orgId], references: [id])
  todos          Todo[]
  sharedTodos    Todo[]            @relation("SharedTodos")
  messages       Message[]
  aiInteractions AIInteraction[]
  accounts       Account[]
  sessions       Session[]
}

model VerificationToken {
  identifier String
  token      String   @unique
  expires    DateTime
  code       String?  // Store the 6-character code we send in email

  @@unique([identifier, token])
}

model Org {
  id        String   @id @default(cuid())
  name      String
  createdAt DateTime @default(now())
  users     User[]
}

model Todo {
  id          String    @id @default(cuid())
  title       String
  ownerId     String
  owner       User      @relation(fields: [ownerId], references: [id])
  status      TodoStatus @default(OPEN)
  priority    Priority?
  dueDate     DateTime?
  visibility  Visibility @default(PRIVATE)
  aiGenerated Boolean   @default(false)
  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt
  sharedWith  User[]    @relation("SharedTodos")
  messages    Message[]
  aiInteractionId String?
  aiInteraction   AIInteraction? @relation(fields: [aiInteractionId], references: [id])
}

model Message {
  id        String   @id @default(cuid())
  content   String
  todoId    String
  todo      Todo     @relation(fields: [todoId], references: [id], onDelete: Cascade)
  authorId  String
  author    User     @relation(fields: [authorId], references: [id])
  createdAt DateTime @default(now())
}

model MotivationalMessage {
  id        String   @id @default(cuid())
  message   String
  date      DateTime @unique
  active    Boolean  @default(true)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model AIInteraction {
  id         String   @id @default(cuid())
  userId     String
  user       User     @relation(fields: [userId], references: [id])
  prompt     String
  response   String?  @db.Text
  actionItems String? @db.Text
  status     AIStatus @default(PENDING)
  createdAt  DateTime @default(now())
  updatedAt DateTime @updatedAt
  todos      Todo[]
}

enum TodoStatus {
  OPEN
  COMPLETED
}

enum Priority {
  LOW
  MEDIUM
  HIGH
}

enum Visibility {
  PRIVATE
  ORG
  SPECIFIC
}

enum AIStatus {
  PENDING
  PROCESSING
  COMPLETED
  ERROR
}
